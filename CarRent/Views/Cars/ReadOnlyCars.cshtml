@section scripts
{
    <script>

        //Deleting method using jquery and ajax call to our delete action in api
        $(document).ready(function () {

            $('#cars').DataTable({
                ajax: {
                    url: "/api/cars",
                    dataSrc: ""
                },
                columns: [
                   {
                       data: "carManufacturer.manufacturerName",
                   },
                   {
                       data: "model"
                   },

                    {
                        data: "carYear"
                    },
                    {
                        data: "available",
                        render: function (data) {
                            if (data == false) {
                                return "No";
                            }
                            else {
                                return "Yes";
                            }
                        }
                    },
                    {
                        data: "carId",
                        render: function (data) {
                            return "<a href='/cars/details/" + data + "'>Details</a>"
                        }
                    }

                ]

            });

        });


    </script>
}